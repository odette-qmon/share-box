<div class="container py-5">
  <h4>Let's upload a new document</h4>
  <div class="container py-5">
    <%= simple_form_for(@document) do |f| %>

      <div class="form-inputs">
        <%= f.input :photo, as: :file %>
        <%= f.input :name %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>

  <h4>All uploaded files</h4>
  <div class="py-4">
    <% @documents.each do |document| %>
      <div class="">
        <%= link_to document.name, document_path(document) %>
        <%= link_to 'Delete', document_path(document), method: :delete, data: { confirm: "Are you sure you want to delete this file?" } %>
      </div>
      <hr>
    <% end %>
  </div>
</div>
